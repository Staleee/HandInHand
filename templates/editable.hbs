<!DOCTYPE HTML PUBLIC "-//W3C//DTD HTML 4.0 Transitional//EN">
<html>

<head>
    <title>Edit User Profile</title>

    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.5.1/css/all.min.css">
 <link rel="shortcut icon" type="x-icon" href="https://i.imgur.com/MoSHBZX.png">
    <link rel="stylesheet" href="editablestyle.css">

</head>

<body>

    <div class="container">
        <div class="form-box">
            <h1 id="title">Edit User Info</h1>
            <form action="/edituserprof" method="POST" name="Info">
                <div class="input-group">
                    <div class="input-container">
                        <label for="Description">Description:</label>
                        <input type="text" id="Description" name="Description" value="{{ userProf.Description }}"><br>
                    </div>
                    <div class="input-container">
                        <label for="PhoneNum">Phone Number: </label>
                        <input type="number" id="PhoneNum" name="PhoneNum" placeholder="PhoneNum" value="{{ userProf.PhoneNum }}"><br>
                    </div>
                    <div class="input-container">
                        <label for="Location">Location: </label>
                        <input type="text" id="Location" name="Location" placeholder="Location" value="{{ userProf.Location }}"><br>
                    </div>
                    <div class="input-container">
                        <label for="ProfilePic">Profile Picture Link:</label>
                        <input type="text" id="ProfilePic" name="ProfilePic" value=" {{userProf.ProfilePic}}"> <br>
                    </div>
                    {{#if (eq userProf.role 'organization')}}
                    <div class="input-container">
                        <label for="AddPhotos">Add Photos (URL):</label>
                        <input type="text" id="AddPhotos" name="AddPhotos" placeholder="Enter photo URL" ><br>
                    </div>
                    {{/if}}
                </div>
                <div class="btn-field">
                    <button type="button" id="DiscardBtn" class="Discard" onclick="window.location.href='/userprofile'">Discard</button>
                    <button type="submit" name="Submit" value="Submit Button">Submit</button>
                </div>
                <div class="deletebtn-field">
                    <button type="button" id="Deletebtn" class="Delete" onclick="window.location.href='/deletepage'">Delete Account</button>
                </div>
            </form>
        </div>
    </div>
</body>

</html>
