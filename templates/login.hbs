<!DOCTYPE html>
<html>

<head>
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Login</title>
    <link rel="stylesheet" href="loginsignup.css">
    <script src="https://kit.fontawesome.com/c4254e24a8.js" crossorigin="anonymous"></script>
    <link rel="icon" type="image/png" href="https://i.imgur.com/MoSHBZX.png">
</head>

<body>
    <div class="container">
        <a href="/">
            <img src="https://i.imgur.com/MoSHBZX.png" class="logo" alt="HandinHand">
        </a>
        <div class="form-box">
            <h1 id="title">Log In</h1>
            <form action="/login" method="POST">
                <div class="input-group">
                    <div class="input-field" id="nameField">
                        <input type="text" placeholder="Name" name="name" required>
                    </div>
                    <div class="input-field">
                        <input type="password" placeholder="Password" name="password" required>
                    </div>
                    {{!-- <p>Forgot Password <a href="forgotpassword.html">Click Here!</a></p> --}}
                    <button type="submit">Submit</button>
                </div>
                <p id="forgotPasswordLink">Forgot Password <a href="/forgot-password">Click here</a></p>
                <div class="btn-field">
                    <button type="button" id="signupBtn" onclick="window.location.href='/signup'">Sign up</button>
                    <button type="button" id="loginBtn" class="disable">Log in</button>
                </div>
            </form>
        </div>
    </div>

    <script>
        let signupBtn = document.getElementById("signupBtn");
        let loginBtn = document.getElementById("loginBtn");
        let nameField = document.getElementById("nameField");
        let title = document.getElementById("title");

    </script>
</body>

</html>