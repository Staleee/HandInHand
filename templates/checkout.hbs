<header class="header-container">
    <div class="logo-container">
        <img src="https://i.imgur.com/MoSHBZX.png" class="logo" alt="HandinHand">
        <link rel="stylesheet" type="text/css" href="checkout.css">
    </div>
    <nav class="navbar">
        <ul class="nav-menu">
            <li><a href="#">Home</a></li>
            <li><a href="#">About</a></li>
            <li><a href="/Posts">Opportunities</a></li>
            <li><a href="{{#if profileLink}}{{ profileLink }}{{else}}/signup{{/if}}">Profile</a></li>
        </ul>
        <div class="h-right">
            {{#if signedIn}}
            <a href="/logout">Logout</a>
            {{#if isOrganization }}
            <a href="/job_submission_form" class="post-button">Post an Opportunity</a>
            {{/if}}
            {{else}}
            <ul class="auth-links">
                <li><a href="/signup">Register</a></li>
                <li><a href="/login">Login</a></li>
            </ul>
            {{/if}}
            <div class="menu-icon" id="menu-icon"></div>
        </div>
    </nav>
</header>

<section class="checkout-section">
    <div class="container">
        <div class="checkout-form-container container-box">
            <div class="checkout-form">
                <h2>Checkout</h2>
                <form action="/checkout" method="POST">
                    <div class="form-group">
                        <div class="inline-group">
                            <div class="form-group">
                                <label for="firstName">First Name:</label>
                                <input type="text" id="firstName" name="firstName" required>
                            </div>
                            <div class="form-group">
                                <label for="lastName">Last Name:</label>
                                <input type="text" id="lastName" name="lastName" required>
                            </div>
                        </div>
                    </div>
                    <div class="form-group">
                        <label for="email">Email:</label>
                        <input type="email" id="email" name="email" required>
                    </div>
                    <div class="form-group">
                        <label for="phoneNumber">Phone Number:</label>
                        <input type="tel" id="phoneNumber" name="phoneNumber" pattern="[0-9]{3}-[0-9]{3}-[0-9]{4}" required>
                        <small>Format: 123-456-7890</small>
                    </div>
                    <button type="submit" class="checkout-button">Proceed to Checkout</button>
                </form>
            </div>
        </div>
        <div class="job-details-container container-box">
            <div class="job-details">
                <h2>Job Details</h2>
                <h3>{{ job.title }}</h3>
                <p>{{ job.description }}</p>
                <p>Location: {{ job.location }}</p>
                <p>Required Hours: {{ job.requiredHours }}</p>
                <p>Required Skills: {{ job.requiredSkills }}</p>
            </div>
        </div>
    </div>
</section>
