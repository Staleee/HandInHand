<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="UFT-8">
    <meta name="viewport" content="width=device-width" , initial-scale="1.0">
    <link rel="shortcut icon" type="x-icon" href="logonowords.png">
     <link rel="shortcut icon" type="x-icon" href="https://i.imgur.com/MoSHBZX.png">
    <title>HandinHand-Profile</title>

    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.5.1/css/all.min.css">

    <link rel="stylesheet" href="userprofilestyle.css">
</head>

<body>

    <header>
        <div class="logo">
            <a href="/">
                {{!-- logo img!! --}}
                <img src="https://i.imgur.com/MoSHBZX.png" class="logo" alt="HandinHand">
            </a>
        </div>

        <div class="user">
            {{!-- <img src="http://localhost:3000{{userProf.ProfilePic}}" id="profilePic" alt="Profile Picture"> --}}
            <img src="{{userProf.ProfilePic}}" id="profilePic" alt="Profile Picture">


            <h3 class="name">{{ userProf.name }}</h3>
            <p class="post">volunteer</p>
        </div>

        <nav class="navbar">
            <ul>
                <li><a href="#About">About</a></li>
                <li><a href="#current">Current Opportunities</a></li>
                <li><a href="#prevvolunteer">Previous Volunteering Experience</a></li>
                <li><a href="#contact">Contact</a></li>
                <li><a href="/editable">Edit</a></li>
                <li><a href="#" onclick="window.history.back();" class="back-button">Back</a></li>


            </ul>
        </nav>
    </header>

    <div id="menu" class="fas fa-bars"></div>

    <!-- abt section starts -->

    <section class="About" id="About">
        <h3>HELLO!</h3>
        <h1>I'm <span>{{userProf.name}}</span></h1>
        <p>{{userProf.Description}}</p>
        <p>I have completed {{userProf.HoursVolunteered}} volunteering hours</p>
        <a href="#current"><button class="btn">Current Volunteering Opportunities <i
                    class="fa-solid fa-hand-holding-hand"></i></button></a>

    </section>

    <!-- abt section ends -->

    <!-- prev vol exps starts -->
    <section class="current" id="current">
        <h1 class="heading"><span>Current</span> Opportunities</h1>
        <div id="currentOpps"></div>
        <div class="box-container">
            {{#each jobs}}
            {{#if (eq this.completed false)}}
            <div class="box">
                <i class="fa-solid fa-calendar-week"></i>
                <span>{{this.startDate}}</span>
                <h3>{{this.title}}</h3>
                <p>{{this.description}}</p>
            </div>
            {{/if}}
            {{/each}}
        </div>
    </section>

    <section class="current" id="prevvolunteer">
        <h1 class="heading"><span>Previous</span> Opportunities</h1>
        <div id="currentOpps"></div>
        <div class="box-container">
            {{#each jobs}}
            {{#if (eq this.completed true)}}
            <div class="box">
                <i class="fa-solid fa-calendar-week"></i>
                <span>{{this.startDate}}</span>
                <h3>{{this.title}}</h3>
                <p>{{this.description}}</p>
            </div>
            {{/if}}
            {{/each}}
        </div>
    </section>

    {{!-- <section class="prevvolunteer" id="prevvolunteer">
        <h1 class="heading"><span>Previous </span>Volunteering Experience</h1>
        <div id="userPrevVolExp"></div> --}}

        <!--     <div class="box-container">

        <div class="box">
            <i class="fa-solid fa-utensils"></i>
            <span>Dec 2023 - Jan 2024</span>
            <h3>Beirut Food Center</h3>
            <p>Served hot food to homeless people</p>
            <p>20 hours</p>
        </div>


    </section>

    <!-- prev vol exps ends -->

        <!-- contact start -->

        <section class="contact" id="contact">

            <h1 class="heading"> my <span>contact</span> info </h1>
            <div id="userContactInfo"></div>
            <div class="row">
                <div class="content">
                    <h3 class="title">contact info</h3>
                    <div class="info">
                        <h3> <i class="fas fa-envelope"></i> {{userProf.email}}</h3>
                        <h3><i class="fas fa-phone"></i> {{userProf.PhoneNum}}</h3>
                        <h3><i class="fas fa-map-marker-alt"></i> {{userProf.Location}} </h3>

                    </div>
                </div>
            </div>

        </section>

        <!-- contact end -->

        <!-- scroll top -->
        <a href="About" class="top"></a>

        <script src="https://cdnjs.cloudflare.com/ajax/libs/jquery/3.7.1/jquery.min.js"></script>

        <script>
            $(document).ready(function () {
                $('#menu').click(function () {
                    $(this).toggleClass('fa-times');
                    $('header').toggleClass('toggle');
                });

                $(window).on('scroll load', function () {
                    $('#menu').removeClass('fa-times');
                    $('header').removeClass('toggle');

                    if ($(window).scrollTop() > 0) {
                        $('.top').show();
                    } else {
                        $('.top').hide();

                    }
                });

                // smooth scrolling

                $('a[href*="#"]').on('click', function (e) {

                    e.preventDefault();

                    $('html, body').animate({
                        scrollTop: $($(this).attr('href')).offset().top,
                    },
                        500,
                        'linear'

                    );

                });

            });

        </script>

</body>

</html>