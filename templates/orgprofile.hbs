                <i class="fa-solid fa-calendar-week"></i>
                <span>{{this.startDate}}</span>
                <h3>{{this.title}}</h3>
                <p>{{this.description}}</p>
                <button class="btn1" onclick="redirectToOppProf('{{this._id}}')">Read More</button>
            </div>
            {{/each}}
        </div>
    </section>

